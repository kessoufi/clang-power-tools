<Window
  x:Class="ClangPowerTools.Views.InputDataView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Settings Input"
  Width="525"
  Height="400"
  d:DataContext="{d:DesignInstance local:InputDataViewModel,
                                   IsDesignTimeCreatable=True}"
  d:DesignHeight="250"
  d:DesignWidth="300"
  Background="WhiteSmoke"
  ShowActivated="True"
  ShowInTaskbar="False"
  WindowStartupLocation="CenterScreen"
  WindowStyle="ToolWindow"
  mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="91*" />
      <ColumnDefinition Width="426*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="4*" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="45" />
    </Grid.RowDefinitions>

    <Label
      Grid.Row="0"
      Grid.ColumnSpan="2"
      Margin="10,5,10,5">
      Enter the input strings (one per line)
    </Label>

    <TextBox
      Name="TextBoxInput"
      Grid.Row="1"
      Grid.ColumnSpan="2"
      Margin="15,0,15,0"
      AcceptsReturn="True"
      HorizontalScrollBarVisibility="Visible"
      Text="{Binding TextBoxInput}"
      VerticalScrollBarVisibility="Visible" />

    <GridSplitter
      Grid.Row="2"
      Grid.ColumnSpan="2"
      Height="4"
      HorizontalAlignment="Stretch"
      Panel.ZIndex="100"
      ResizeDirection="Rows" />

    <Border
      Grid.Row="3"
      Grid.ColumnSpan="2"
      BorderThickness="1">
      <Grid>
        <Button
          Name="OKButton"
          Width="75"
          Height="25"
          Margin="0,0,12,10"
          HorizontalAlignment="Right"
          VerticalAlignment="Bottom"
          Command="{Binding OkCommand}"
          Content="OK" />

      </Grid>
    </Border>

  </Grid>
</Window>

