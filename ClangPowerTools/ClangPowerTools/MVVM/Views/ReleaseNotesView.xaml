<Window
  x:Class="ClangPowerTools.MVVM.Views.ReleaseNotesView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools.MVVM.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Release Notes"
  d:DesignHeight="660"
  d:DesignWidth="504"
  mc:Ignorable="d">

  <Grid>

    <Grid.Background>
      <ImageBrush ImageSource="/Resources/ReleaseNotesBackground.png" />
    </Grid.Background>

    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>

      <ColumnDefinition Width="35" />
      <ColumnDefinition />
      <ColumnDefinition Width="35" />

    </Grid.ColumnDefinitions>

    <Image
      Grid.Row="0"
      Grid.Column="1"
      Width="90"
      Height="90"
      Margin="0,15,0,0"
      Source="/Resources/Icon.png" />

    <TextBlock
      Grid.Row="1"
      Grid.Column="1"
      HorizontalAlignment="Center"
      FontSize="36"
      Text="You're up to date!" />

    <TextBlock
      Grid.Row="2"
      Grid.Column="1"
      HorizontalAlignment="Center"
      FontSize="15"
      Foreground="#3A3B40"
      Text="version 5.1" />

    <TextBlock
      Grid.Row="3"
      Grid.Column="1"
      Margin="0,35,0,0"
      HorizontalAlignment="Left"
      FontSize="22"
      Text="New Features" />

    <TextBlock
      Grid.Row="4"
      Grid.Column="1"
      Margin="10,5,0,0"
      HorizontalAlignment="Left"
      FontSize="15"
      Text="Export clang-tidy config file so you can use it the way you like it."
      TextWrapping="Wrap" />


    <TextBlock
      Grid.Row="5"
      Grid.Column="1"
      Margin="0,35,0,0"
      HorizontalAlignment="Left"
      FontSize="22"
      Text="Improvements" />

    <TextBlock
      Grid.Row="6"
      Grid.Column="1"
      Margin="10,5,0,0"
      HorizontalAlignment="Left"
      FontSize="15"
      Text="In a world of slowbalisation, our account validation is working blazing fast."
      TextWrapping="Wrap" />

    <TextBlock
      Grid.Row="7"
      Grid.Column="1"
      Margin="0,35,0,0"
      HorizontalAlignment="Left"
      FontSize="22"
      Text="Improvements" />

    <TextBlock
      Grid.Row="8"
      Grid.Column="1"
      Margin="10,5,0,0"
      HorizontalAlignment="Left"
      FontSize="15"
      Text="Compile shortcut didn't run the command on the proper file. Now it does."
      TextWrapping="Wrap" />

    <Rectangle
      Grid.Row="9"
      Grid.Column="0"
      Margin="0,60,0,0"
      Fill="#272E58" />

    <Rectangle
      Grid.Row="9"
      Grid.Column="2"
      Margin="0,60,0,0"
      Fill="#272E58" />

    <Grid
      Grid.Row="9"
      Grid.Column="1"
      Margin="0,60,0,0"
      Background="#272E58">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>

      <TextBlock
        Grid.Row="0"
        Grid.Column="0"
        Margin="0,10,0,0"
        HorizontalAlignment="Left"
        FontSize="15"
        Foreground="White"
        Text="Using Clang Power Tools commercially?" />

      <TextBlock
        Grid.Row="0"
        Grid.Column="0"
        Margin="0,35,0,0"
        HorizontalAlignment="Left"
        FontSize="12"
        Foreground="White"
        Text="We offer a Commercial Use license just perfect for your whole team."
        TextWrapping="Wrap" />

      <Button
        Grid.Column="1"
        Width="110"
        Height="38"
        HorizontalAlignment="Right"
        Background="#FFBF31"
        BorderThickness="0"
        Content="UPGRADE"
        FontSize="16"
        FontWeight="Bold"
        Foreground="Black" />

    </Grid>



  </Grid>
</Window>
