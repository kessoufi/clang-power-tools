<Window
  x:Class="ClangPowerTools.MVVM.Views.ReleaseNotesView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools.MVVM.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Release Notes"
  Width="550"
  Height="715"
  ResizeMode="NoResize"
  WindowStartupLocation="CenterScreen"
  WindowStyle="ToolWindow"
  mc:Ignorable="d">

  <StackPanel>

    <Grid>

      <Grid.Background>
        <ImageBrush ImageSource="/ClangPowerTools;component/Resources/ReleaseNotesBackground.png" />
      </Grid.Background>

      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="400" />
        <RowDefinition Height="20" />
      </Grid.RowDefinitions>

      <Grid.ColumnDefinitions>

        <ColumnDefinition Width="35" />
        <ColumnDefinition />
        <ColumnDefinition Width="35" />

      </Grid.ColumnDefinitions>

      <Image
        Grid.Row="0"
        Grid.Column="1"
        Width="100"
        Height="100"
        Margin="0,5,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Source="/ClangPowerTools;component/Resources/CPTLogo.png" />

      <TextBlock
        Grid.Row="1"
        Grid.Column="1"
        HorizontalAlignment="Center"
        FontSize="36"
        Text="Clang Power Tools" />

      <TextBlock
        Grid.Row="2"
        Grid.Column="1"
        HorizontalAlignment="Center"
        FontSize="15"
        Foreground="#3A3B40"
        Text="version 5.1" />

      <ListView
        Grid.Row="3"
        Grid.Column="1"
        Height="380"
        Margin="0,20,0,0"
        Background="Transparent"
        Focusable="False"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled">

        <ListView.ItemContainerStyle>
          <Style TargetType="{x:Type ListViewItem}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
              <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListViewItem}">
                  <ContentPresenter />
                </ControlTemplate>
              </Setter.Value>
            </Setter>
          </Style>
        </ListView.ItemContainerStyle>

        <!--  What's New  -->
        <TextBlock
          HorizontalAlignment="Left"
          FontSize="22"
          Text="What's New" />

        <TextBlock
          Margin="10,5,0,0"
          HorizontalAlignment="Left"
          FontSize="15"
          Text="&#x2022; CMake support for open file"
          TextWrapping="Wrap" />

        <TextBlock
          Margin="10,5,0,0"
          HorizontalAlignment="Left"
          FontSize="15"
          Text="&#x2022; Complete UI redesign"
          TextWrapping="Wrap" />

        <TextBlock
          Margin="10,5,0,0"
          HorizontalAlignment="Left"
          FontSize="15"
          Text="&#x2022; Export/Import settings configuration"
          TextWrapping="Wrap" />

        <TextBlock
          Margin="10,5,0,0"
          HorizontalAlignment="Left"
          FontSize="15"
          Text="&#x2022; Settings are now saved in a JSON format"
          TextWrapping="Wrap" />

        <TextBlock
          Margin="10,5,0,0"
          HorizontalAlignment="Left"
          FontSize="15"
          Text="&#x2022; Export .clang-tidy config file"
          TextWrapping="Wrap" />

        <TextBlock
          Margin="10,5,0,0"
          HorizontalAlignment="Left"
          FontSize="15"
          Text="&#x2022; Improve the email and password validation"
          TextWrapping="Wrap" />

        <TextBlock
          Margin="10,5,0,0"
          HorizontalAlignment="Left"
          FontSize="15"
          Text="&#x2022; Offline support"
          TextWrapping="Wrap" />


        <!--  Bug Fixes  -->
        <TextBlock
          Margin="0,35,0,0"
          HorizontalAlignment="Left"
          FontSize="22"
          Text="Bug Fixes" />

        <TextBlock
          Margin="10,5,0,0"
          HorizontalAlignment="Left"
          FontSize="15"
          Text="&#x2022; Crash on Visual Studio 2015"
          TextWrapping="Wrap" />

        <TextBlock
          Margin="10,5,0,0"
          HorizontalAlignment="Left"
          FontSize="15"
          Text="&#x2022; Crash when Tidy on save is active"
          TextWrapping="Wrap" />

        <TextBlock
          Margin="10,5,0,0"
          HorizontalAlignment="Left"
          FontSize="15"
          Text="&#x2022; Calibrate focus between Error List and Output window"
          TextWrapping="Wrap" />

        <TextBlock
          Margin="10,5,0,0"
          HorizontalAlignment="Left"
          FontSize="15"
          Text="&#x2022; Clang compile warnings detection"
          TextWrapping="Wrap" />

      </ListView>
    </Grid>

    <Grid Background="#272E58">

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="35" />
        <ColumnDefinition />
        <ColumnDefinition Width="35" />
      </Grid.ColumnDefinitions>

      <Grid.RowDefinitions>
        <RowDefinition Height="60" />
        <RowDefinition Height="50" />
      </Grid.RowDefinitions>


      <TextBlock
        Grid.Row="0"
        Grid.Column="1"
        Margin="0,10,0,0"
        HorizontalAlignment="Left"
        FontSize="15"
        Foreground="White"
        Text="Using Clang Power Tools commercially?" />

      <TextBlock
        Grid.Row="0"
        Grid.Column="1"
        Margin="0,35,0,0"
        HorizontalAlignment="Left"
        FontSize="12"
        Foreground="White"
        Text="We offer a Commercial Use License just perfect for your team."
        TextWrapping="Wrap" />

      <TextBlock
        Grid.Row="1"
        Grid.Column="1"
        Margin="0,0,0,10"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
        <Hyperlink
          Foreground="LightPink"
          NavigateUri="https://clangpowertools.com/blog/future-of-clang-power-tools.html"
          RequestNavigate="Hyperlink_Navigate">
          The future of Clang Power Tools
        </Hyperlink>
      </TextBlock>

      <Button
        Grid.Column="1"
        Width="110"
        Height="38"
        Margin="0,15,0,0"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Background="#FFBF31"
        BorderThickness="0"
        Click="Button_Click"
        Content="UPGRADE"
        FontSize="16"
        FontWeight="Bold"
        Foreground="Black" />

    </Grid>

  </StackPanel>


</Window>
