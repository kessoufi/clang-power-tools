<Window
  x:Class="ClangPowerTools.Views.SettingsView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Clang Power Tools  -  Settings"
  Width="824"
  Height="485"
  ResizeMode="NoResize"
  WindowStartupLocation="CenterScreen"
  WindowStyle="ToolWindow"
  mc:Ignorable="d">
  <TabControl>

    <TabItem>
      <TabItem.Header>
        <StackPanel Orientation="Horizontal">
          <TextBlock>General</TextBlock>
        </StackPanel>
      </TabItem.Header>
      <StackPanel>
        <TextBlock>Enter some text</TextBlock>
        <TextBox Name="textBox1" Width="50" />
        <ContentControl x:Name="ActiveItem" />


      </StackPanel>
    </TabItem>

    <TabItem>
      <TabItem.Header>
        <StackPanel Orientation="Horizontal">
          <TextBlock>Format</TextBlock>
        </StackPanel>
      </TabItem.Header>
      <StackPanel>
        <TextBlock>Enter some text</TextBlock>
      </StackPanel>
    </TabItem>

    <TabItem>
      <TabItem.Header>
        <StackPanel Orientation="Horizontal">
          <TextBlock>Tidy</TextBlock>
        </StackPanel>
      </TabItem.Header>
      <StackPanel>
        <TextBlock>Enter some text</TextBlock>
      </StackPanel>
    </TabItem>

    <TabItem>
      <TabItem.Header>
        <StackPanel Orientation="Horizontal">
          <TextBlock>Account</TextBlock>
        </StackPanel>
      </TabItem.Header>
      <StackPanel>
        <TextBlock>Enter some text</TextBlock>
      </StackPanel>
    </TabItem>

    <TabItem Header="Tab 2">
      <!--
        Bind TextBlock.Text to the TextBox on the first
        TabItem.
      -->
      <TextBlock Text="{Binding ElementName=textBox1, Path=Text}" />
    </TabItem>
  </TabControl>

</Window>
