<Window
  x:Class="ClangPowerTools.Views.TidyChecksView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:ClangPowerTools"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Tidy Checks"
  Width="525"
  Height="400"
  d:DataContext="{d:DesignInstance local:TidyChecksViewModel,
                                   IsDesignTimeCreatable=True}"
  Background="WhiteSmoke"
  ShowActivated="True"
  ShowInTaskbar="False"
  WindowStartupLocation="CenterScreen"
  WindowStyle="ToolWindow"
  mc:Ignorable="d">
  <Grid>
    <ListBox ItemsSource="{Binding TidyChecksList}" SelectedItem="{Binding SelectedCheck}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Name}" />
            <CheckBox HorizontalAlignment="Right" IsChecked="{Binding IsChecked}" />
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
    <TextBlock VerticalAlignment="Bottom" Text="{Binding CheckDescription}" />
  </Grid>

</Window>
