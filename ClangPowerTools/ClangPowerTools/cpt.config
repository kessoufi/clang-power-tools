<cpt-config>

  <!-- 
  
  SAMPLE cpt.config file
  
  Here you can specify configuration arguments for ClangPowerTools
  IMPORTANT: There can be ONLY ONE argument value in each <arg> element 
  
  This file has to be put in your codebase directory hierarchy (top level).
  clang-build.ps1 will automatically pick it up.
  
  -->

  <arg>clang-flags @( "-Werror"
                    , "-Wall"
                    , "-fms-compatibility-version=19.10"
                    , "-Wmicrosoft"
                    , "-Wno-invalid-token-paste"
                    , "-Wno-unknown-pragmas"
                    , "-Wno-unused-value"
                    ) </arg>
  
  <arg>dir Get-Location</arg>
  
  <arg>header-filter '.*'</arg>
  
  <arg>parallel</arg>
			  
  <arg>treat-sai</arg>
  
  <arg>vs-sku 'Professional'</arg>
  
</cpt-config>
